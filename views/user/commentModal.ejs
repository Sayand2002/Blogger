
<div class="modalContents">

    <input type="hidden" value="<%=userId%>" id="commentHiddenUserId">
    <input type="hidden" value="<%=blogId%>" id="commentHiddenBlogId">

    <a class="closeModal" id="closeModal"> 
        <i class="fa-solid fa-circle-xmark fa-2xl"></i>
    </a>
    <h2 class="p-4">Comments</h2>
    <div class="comment-input-container d-flex mx-3 align-item-center justify-content-center">
        <input type="text" placeholder="Enter your comments" class="commentInput" id="commentInput">
        <button class="btn m-0 my-auto" id="commentDoneBtn">
            <i class="fa-solid fa-check fa-xl"></i>
        </button>
    </div>
    <% if(commentData.length > 0){ %>
        <% commentData.forEach((comment) => { %>
            <div class="otherComments">
                <div class="userImg flex-1" style="background-image: url(/public/uploads/<%=comment.user.image%>);"></div>
                <div class="d-flex flex-column eachComment flex-1">
                    <h5 class="m-0"><%=comment.user.username%></h5>
                    <span><%=comment.user.email%></span>
                    <p>
                        <%=comment.comment%>
                    </p>
                </div>
                <div class="text-end" style="font-size: 12px; flex: auto;">
                    <p>
                        <%= comment.commentedAt.toLocaleDateString('en-GB',{
                        day: 'numeric', 
                        month: 'long', 
                        year: 'numeric' 
                        })%>
                    </p>
                    <i class="fa-solid fa-trash fa-lg" data-comment-id="<%=comment._id%>"></i>

                </div>
            </div>
        <% })%>
    <%}else{%>
        <div class="defaultImg">
    <%}%>

    </div>
</div>