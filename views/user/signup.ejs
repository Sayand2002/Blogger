<%- include('../partials/header.ejs') %>

<div class="main fade-in" style="display: flex; justify-content: center; align-items: center; height: 100vh;">

    <!-- Sing in  Form -->
    <section class="sign-in">
        <div class="container">
            <div class="signin-content d-flex flex-column" style="width: 30rem;">
                <div class="my-4">
                    <h2 class="text-center pt-4" style="font-family: MYBLOG; color: #191919;  text-shadow:0px 16px 48px 0px rgba(10, 10, 10, 0.517);">WELCOME&nbsp;&nbsp;TO&nbsp;&nbsp;MY BLOG</h2>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="w-75 m-3">
                        <form action="/user/signup" method="POST" class="register-form">
                            <div class="mb-3">
                                <label for="username" class="loginLabel">EMAIL</label>
                                <input type="text" class="form-control" placeholder="Email" id="username" name="email" style="background-color: rgba(255, 255, 255, 0.422);">
                            </div>
                            <div class="mb-3">
                                <label for="username" class="loginLabel">FIRSTNAME</label>
                                <input type="text" class="form-control mb-3" placeholder="Firstname" id="username" name="firstname" style="background-color: rgba(255, 255, 255, 0.422);">
                                <label for="username" class="loginLabel">LASTNAME</label>
                                <input type="text" class="form-control" placeholder="Lastname" id="username" name="lastname" style="background-color: rgba(255, 255, 255, 0.422);">
                            </div>

                            <div class="mb-3">
                                <label for="password" class="loginLabel">PASSWORD</label>
                                <input type="password" class="form-control" placeholder="Password" id="password" name="password" style="background-color: rgba(255, 255, 255, 0.422);">
                            </div>

                            <div class="d-flex justify-content-center">
                                <button class="button" id="signup-proceed" type="submit">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75"></path>
                                    </svg>
                                    <div class="text mx-5">
                                        Proceed
                                    </div>
                                </button>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
      let mainContainer = document.querySelector('.main');
      setTimeout(function () {
        mainContainer.classList.add('active');
      }, 100);
    });
  </script>
  
